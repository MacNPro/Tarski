<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:orientation="vertical"
    tools:context="io.llamas.tarski.Ejercicios">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/fondo"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/regresar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:padding="12dp"
            android:src="@drawable/regresar" />

        <io.llamas.tarski.CustomClasses.RalewaySemiBold
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="El Mundo de Tarski"
            android:textSize="16sp" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/tarjeta_half"
        android:elevation="2dp">

        <io.llamas.tarski.CustomClasses.RalewayMediumEdit
            android:id="@+id/input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparente"
            android:hint="Toda x es verde y cuadrado"
            android:padding="16dp"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/iconColor"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@drawable/circulo_azul" />

            <io.llamas.tarski.CustomClasses.RalewayBold
                android:id="@+id/iconText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="?"
                android:textColor="@color/blanco"
                android:textSize="14sp" />

        </RelativeLayout>

    </LinearLayout>

    <io.llamas.tarski.CustomClasses.RalewaySemiBold
        android:id="@+id/checar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="@drawable/tarjeta_azul"
        android:elevation="2dp"
        android:paddingBottom="10dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="10dp"
        android:text="checar"
        android:textAllCaps="true"
        android:textColor="@color/blanco" />

</LinearLayout>
